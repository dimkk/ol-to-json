{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "target": "ESNext",
        "module": "CommonJS",
        "removeComments": true,
        "strict": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": ["src"]
}
